    </p>
  </div>
  <div id='submit'></div>
  <div id='submit-idea'>
    <div class='submit-response'>
      <% if flash[:error] %>
        <h3>
          <%= flash[:error] %>
        </h3>
      <% end %>
      <% if flash[:success] %>
        <h3>
          <%= flash[:success] %>
        </h3>
      <% end %>
      <% if flash[:notice] %>
        <h3>
          <%= flash[:notice] %>
        </h3>
      <% end %>
    </div>
    <h3>Submit Your Idea</h3>
    <%= form_for :idea, url: "/ideas", method: "post" do |f| %>
      <h5>Idea</h5>
      <%= f.text_field :idea_name %>

      <h5>More Detail</h5>
      <%= f.text_field :description %>

      <h5>Author, Email, Optional</h5>
      <%= f.text_field :author %><br>
      <div class='captcha'>

        <div class='simple_captcha'>
          <div class='simple_captcha_image'>
            <%= simple_captcha_options[:image] %>
          </div>

          <div class='simple_captcha_field'>
            <%= simple_captcha_options[:field] %>
          </div>

        <!--   <div class='simple_captcha_label'>
            <h3>
              <%= simple_captcha_options[:label] %>
            </h3>
          </div> -->

          <div class='simple_captcha_refresh_button'>
            <%= simple_captcha_options[:refresh_button] %>
          </div>
        </div>

      </div>
      <br>
      <div class='submit-button'>
        <h5>
          <%= f.submit "Submit Idea" %>
        </h5>
      </div>
    <% end %>
  </div>
</div>
